# plot(relativeCosts, meanRewards)

# println(meanRewards)

n = 10

meanRewards = zeros(n)
relativeCosts = zeros(n)
for i in 1:n
    savedRewards = JLD2.load("rewards$(i).jld2")["rewards"]
    meanRewards[i] = Statistics.mean(savedRewards)
    relativeCosts[i] = i
end
plot(relativeCosts, meanRewards)
